<!--pages/streamPush/index.wxml-->
<view wx:if="{{total === 0}}">
  <t-empty t-class="empty-cls" t-class-image="t-empty__image" image="{{image}}" description="无推流数据" />
</view>

<view wx:else>
  <view class="container">

  <view class="stream-list">
    <view class="stream-card" wx:for="{{streamList}}" wx:key="id">
      <view class="stream-info">
        <text class="stream-name">{{item.gbName}}</text>
        <text class="stream-app">应用名：{{item.app}}</text>
        <text class="stream-id">流ID：{{item.stream}}</text>
        <view>
        <text wx-if="{{item.pushing}}" class="stream-status status-active">推流中</text>
        <text wx:else class="stream-status status-inactive">未推流</text>
        </view>
      </view>
      <button class="play-btn" bindtap="playStream" data-item="{{item}}">播放</button>
    </view>
  </view>
</view>
</view>
