<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.wvp.mapper.WvpFavoritesMapper">

    <resultMap type="com.ruoyi.wvp.service.bean.WvpFavorites" id="WvpFavoritesResult">
        <result property="id" column="id"/>
        <result property="favoritesName" column="favorites_name"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="remark" column="remark"/>
    </resultMap>

    <sql id="selectWvpFavoritesVo">
        select id, favorites_name, create_by, create_time, update_by, update_time, remark
        from wvp_favorites
    </sql>

    <select id="selectWvpFavoritesList" parameterType="com.ruoyi.wvp.service.bean.WvpFavorites" resultMap="WvpFavoritesResult">
        <include refid="selectWvpFavoritesVo"/>
        <where>
            <if test="favoritesName != null  and favoritesName != ''">and favorites_name like concat('%',
                #{favoritesName}, '%')
            </if>
        </where>
    </select>

    <select id="selectWvpFavoritesById" parameterType="Long" resultMap="WvpFavoritesResult">
        <include refid="selectWvpFavoritesVo"/>
        where id = #{id}
    </select>

    <insert id="insertWvpFavorites" parameterType="com.ruoyi.wvp.service.bean.WvpFavorites" useGeneratedKeys="true" keyProperty="id">
        insert into wvp_favorites
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="favoritesName != null">favorites_name,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="favoritesName != null">#{favoritesName},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
        </trim>
    </insert>

    <update id="updateWvpFavorites" parameterType="com.ruoyi.wvp.service.bean.WvpFavorites">
        update wvp_favorites
        <trim prefix="SET" suffixOverrides=",">
            <if test="favoritesName != null">favorites_name = #{favoritesName},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteWvpFavoritesById" parameterType="Long">
        delete
        from wvp_favorites
        where id = #{id}
    </delete>

    <delete id="deleteWvpFavoritesByIds" parameterType="String">
        delete from wvp_favorites where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
